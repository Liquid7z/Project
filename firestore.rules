
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    function userProfileHasCorrectIdOnCreate(userId) {
      return request.resource.data.id == userId;
    }
    
    function userProfileIdIsImmutable() {
      return request.resource.data.id == resource.data.id;
    }
    
    function isAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isAdminOrOwner(userId) {
        return isOwner(userId) || isAdmin();
    }
    
    function isUpdatingOwnAdminStatus(userId) {
        return isOwner(userId) && 'isAdmin' in request.resource.data && request.resource.data.isAdmin != resource.data.isAdmin;
    }

    // --- Site-wide Config ---
    match /site_config/maintenance {
      allow get: if true;
      allow write: if isAdmin();
    }

    // --- Plan Configurations ---
    match /plan_configs/{planId} {
      allow get: if true;
      allow write: if isAdmin();
    }

    // --- Payment Verifications ---
    match /paymentVerifications/{verificationId} {
        allow list, get, delete, update: if isAdmin();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    // --- Broadcasts ---
    match /broadcasts/{broadcastId} {
      allow list, get, create, delete: if isAdmin();
    }
    
    // --- Shared Notes ---
    match /shared_notes/{shareId} {
        allow get: if true;
        allow create: if isSignedIn();
        allow delete: if isAdmin();
    }

    // --- User Data Collections ---

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && userProfileHasCorrectIdOnCreate(userId);
      allow update: if (isOwner(userId) && userProfileIdIsImmutable() && !isUpdatingOwnAdminStatus(userId)) || isAdmin();
      allow delete: if isExistingOwner(userId) || isAdmin();

      match /subscriptions/{subscriptionId} {
        allow create, update, delete: if isAdminOrOwner(userId);
        allow get, list: if isAdminOrOwner(userId);
      }
      
      match /subjects/{subjectId} {
        allow create, update, delete: if isOwner(userId);
        allow get, list: if isAdminOrOwner(userId); // Admins can read user subjects

        match /notes/{noteId} {
          allow create, update, delete: if isOwner(userId);
          allow get, list: if isAdminOrOwner(userId); // Admins can read user notes
        }
        
        match /examQuestions/{questionId} {
          allow create, update, delete: if isOwner(userId);
          allow get, list: if isAdminOrOwner(userId); // Admins can read user exam questions
        }

        match /resources/{resourceId} {
          allow create, update, delete: if isOwner(userId);
          allow get, list: if isAdminOrOwner(userId); // Admins can read user resources
        }
      }

      match /stickyNotes/{noteId} {
        allow create, update, delete: if isOwner(userId);
        allow get, list: if isAdminOrOwner(userId); // Admins can read user sticky notes
      }

      match /notifications/{notificationId} {
        allow get, list, update, delete: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) || isAdmin(); // Admins can create notifications for users
      }
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
