
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    function userProfileHasCorrectIdOnCreate(userId) {
      return request.resource.data.id == userId;
    }
    
    function userProfileIdIsImmutable() {
      return request.resource.data.id == resource.data.id;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Admin & Config Collections ---
    
    match /appConfig/{docId} {
      allow get: if true;
      allow list: if true;
      allow write: if isAdmin();
    }


    // --- User Data Collections ---

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && userProfileHasCorrectIdOnCreate(userId);
      allow update: if isExistingOwner(userId) && userProfileIdIsImmutable();
      allow delete: if isExistingOwner(userId);
      allow list: if isAdmin();

      match /subscriptions/{subscriptionId} {
        allow create, update, delete: if isOwner(userId);
        allow get, list: if isOwner(userId);
      }
      
      match /subjects/{subjectId} {
        allow create, update, delete: if isOwner(userId);
        allow get, list: if isOwner(userId);

        match /notes/{noteId} {
          allow create, update, delete: if isOwner(userId);
          allow get, list: if isOwner(userId);
        }
        
        match /examQuestions/{questionId} {
          allow create, update, delete: if isOwner(userId);
          allow get, list: if isOwner(userId);
        }

        match /syllabus/{syllabusId} {
          allow create, update, delete: if isOwner(userId);
          allow get, list: if isOwner(userId);
        }

        match /resources/{resourceId} {
          allow create, update, delete: if isOwner(userId);
          allow get, list: if isOwner(userId);
        }
      }

      match /stickyNotes/{noteId} {
        allow create, update, delete: if isOwner(userId);
        allow get, list: if isOwner(userId);
      }
    }
    
    // --- Collection Group Rules ---
    
    match /{path=**}/notes/{noteId} {
      allow list: if isSignedIn();
    }
     match /{path=**}/subjects/{subjectId} {
      allow list: if isAdmin();
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
